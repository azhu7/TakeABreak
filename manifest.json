{
  "manifest_version": 2,
  "name": "Take a Break!",
  "version": "0.4",
  "minimum_chrome_version": "23",
    "background": {
    "scripts": ["background.js", "alarm.js", "popup.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [ "content.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "omnibox": { "keyword" : "alarm" },
  "permissions": [ "storage", "alarms" ]
}