{
  "manifest_version": 2,
  
  "name": "Take a Break!",
  "version": "0.5",
    "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [ "src/content.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "src/popup.html"
  },
  "permissions": [ "alarms" ]
}